{
  "compilerOptions": {
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "noErrorTruncation": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
